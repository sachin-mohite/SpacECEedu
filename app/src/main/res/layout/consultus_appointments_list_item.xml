<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/Consultant_Consultants_textView_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Mr. Patient"
            android:textAlignment="viewStart"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/Consultant_Consultants_textView_Date"
            app:layout_constraintHorizontal_bias="0.236"
            app:layout_constraintStart_toEndOf="@+id/Consultant_Consultants_ImageView_ProfilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Consultant_Consultants_textView_Timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="12:30 PM"
            android:textAlignment="viewStart"
            android:textColor="#E91E63"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/Consultant_Consultants_ImageView_ProfilePic"
            app:layout_constraintTop_toBottomOf="@+id/Consultant_Consultants_textView_Day"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Consultant_Consultants_textView_Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="Monday"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Consultant_Consultants_ImageView_ProfilePic"
            app:layout_constraintTop_toBottomOf="@+id/Consultant_Consultants_textView_Name"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/Consultant_Consultants_ImageView_ProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_profilepic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Consultant_Consultants_textView_Date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:gravity="right"
            android:text="1/Jan"
            android:textColor="#FFC107"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.235" />

        <ImageButton
            android:id="@+id/bCall"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="8dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_call_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>